@model MiRoti.Models.Pedido
@{
    ViewData["Title"] = "Eliminar Pedido";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4 text-danger">
        <i class="bi bi-exclamation-triangle me-2"></i>Eliminar Pedido #@Model.Id
    </h2>

    <div class="alert alert-warning">
        <i class="bi bi-info-circle me-2"></i>
        ¿Estás seguro de que querés eliminar este pedido? Esta acción no se puede deshacer.
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Cliente:</strong> @Model.Cliente?.Nombre</p>
                    <p><strong>Cadete:</strong> @(Model.Cadete != null ? Model.Cadete.Nombre : "Sin asignar")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Fecha:</strong> @Model.FechaHora.ToString("g")</p>
                    <p><strong>Estado:</strong>
                        @switch (Model.Estado)
                        {
                            case "Pendiente":
                                <span class="badge bg-warning text-dark">Pendiente</span>; break;
                            case "En Preparación":
                                <span class="badge bg-danger">En Preparación</span>; break;
                            case "En Camino":
                                <span class="badge bg-primary">En Camino</span>; break;
                            case "Completado":
                                <span class="badge bg-success">Completado</span>; break;
                            default:
                                <span class="badge bg-secondary">@Model.Estado</span>; break;
                        }
                    </p>
                    <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-light fw-semibold">
            <i class="bi bi-list-ul me-2"></i> Detalles del Pedido
        </div>
        <div class="card-body">
            @if (Model.Detalles != null && Model.Detalles.Any())
            {
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Plato</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model.Detalles)
                        {
                            <tr>
                                <td>@d.Plato?.Nombre</td>
                                <td>@d.Cantidad</td>
                                <td>@d.Plato?.PrecioVenta.ToString("C")</td>
                                <td>@d.Subtotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted fst-italic">No hay detalles registrados.</p>
            }
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger px-4">
                <i class="bi bi-trash"></i> Confirmar Eliminación
            </button>
        </div>
    </form>
</div>
