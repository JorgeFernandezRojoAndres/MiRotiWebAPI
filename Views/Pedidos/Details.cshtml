@model MiRoti.Models.Pedido
@{
    ViewData["Title"] = "Detalles del Pedido";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-eye me-2"></i> Detalles del Pedido #@Model.Id
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <!-- Información principal -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Cliente:</strong> @Model.Cliente?.Nombre</p>
                    <p><strong>Cadete:</strong> @(Model.Cadete != null ? Model.Cadete.Nombre : "Sin asignar")</p>
                    <p><strong>Fecha:</strong> @Model.FechaHora.ToString("g")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Estado:</strong>
                        @switch (Model.Estado)
                        {
                            case "Pendiente":
                                <span class="badge bg-warning text-dark">Pendiente</span>; break;
                            case "En Preparación":
                                <span class="badge bg-danger">En Preparación</span>; break;
                            case "En Camino":
                                <span class="badge bg-primary">En Camino</span>; break;
                            case "Completado":
                                <span class="badge bg-success">Completado</span>; break;
                            default:
                                <span class="badge bg-secondary">@Model.Estado</span>; break;
                        }
                    </p>
                    <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Detalles del pedido -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light fw-semibold">
            <i class="bi bi-list-ul me-2"></i> Platos del Pedido
        </div>
        <div class="card-body">
            @if (Model.Detalles != null && Model.Detalles.Any())
            {
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Plato</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model.Detalles)
                        {
                            <tr>
                                <td>@d.Plato?.Nombre</td>
                                <td>@d.Cantidad</td>
                                <td>@d.Plato?.PrecioVenta.ToString("C")</td>
                                <td>@d.Subtotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end fw-bold">Total</td>
                            <td class="fw-bold">@Model.Total.ToString("C")</td>
                        </tr>
                    </tfoot>
                </table>
            }
            else
            {
                <p class="text-muted fst-italic">No hay platos asociados a este pedido.</p>
            }
        </div>
    </div>

    <!-- Botones -->
    <div class="mt-4 d-flex justify-content-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-trash"></i> Eliminar
        </a>
    </div>
</div>
