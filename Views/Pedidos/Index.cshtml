@model IEnumerable<MiRoti.Models.Pedido>

@{
    ViewData["Title"] = "Seguimiento de Pedidos";

    var pendientes = Model.Count(p => p.Estado == "Pendiente");
    var enPreparacion = Model.Count(p => p.Estado == "En Preparación");
    var enCamino = Model.Count(p => p.Estado == "En Camino");
    var completados = Model.Count(p => p.Estado == "Completado");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Seguimiento de Pedidos</h2>
    </div>
    <p class="text-muted">Monitorear pedidos en tiempo real</p>

    <!-- Métricas -->
    <div class="row mb-4 g-3">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1 fw-semibold">Pendientes</p>
                        <h4>@pendientes</h4>
                    </div>
                    <i class="bi bi-hourglass-split fs-3 text-warning"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1 fw-semibold">En Preparación</p>
                        <h4>@enPreparacion</h4>
                    </div>
                    <i class="bi bi-fire fs-3 text-danger"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1 fw-semibold">En Camino</p>
                        <h4>@enCamino</h4>
                    </div>
                    <i class="bi bi-truck fs-3 text-primary"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1 fw-semibold">Completados Hoy</p>
                        <h4 class="text-success">@completados</h4>
                    </div>
                    <i class="bi bi-check-circle fs-3 text-success"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de pedidos -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center p-5 text-muted">
                    <i class="bi bi-egg-fried fs-1 mb-3"></i>
                    <h5>No hay pedidos activos</h5>
                    <p>Los pedidos aparecerán aquí en tiempo real</p>
                </div>
            }
            else
            {
                <table class="table align-middle table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID Pedido</th>
                            <th>Cliente</th>
                            <th>Artículos</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Cadete</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pedido in Model)
                        {
                            <tr>
                                <td>@pedido.Id</td>
                                <td>@pedido.Cliente?.Nombre</td>
                                <td>@pedido.Detalles?.Count()</td>
                                <td>@pedido.Total.ToString("C0")</td>
                                <td>
                                    @switch (pedido.Estado)
                                    {
                                        case "Pendiente":
                                            <span class="badge bg-warning text-dark">Pendiente</span>;
                                            break;
                                        case "En Preparación":
                                            <span class="badge bg-danger">En Preparación</span>;
                                            break;
                                        case "En Camino":
                                            <span class="badge bg-primary">En Camino</span>;
                                            break;
                                        case "Completado":
                                            <span class="badge bg-success">Completado</span>;
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@pedido.Estado</span>;
                                            break;
                                    }
                                </td>
                                <td>@pedido.Cadete?.Nombre</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@pedido.Id" class="btn btn-sm btn-outline-secondary me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@pedido.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@pedido.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
