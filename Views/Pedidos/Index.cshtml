@model IEnumerable<MiRoti.Models.Pedido>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gesti√≥n de Pedidos";

    var rol = Context.Session.GetString("UsuarioRol") ?? "Invitado";

    var totalPedidos = (int?)ViewData["TotalPedidos"] ?? 0;
    var entregados = (int?)ViewData["Entregados"] ?? 0;
    var enCamino = (int?)ViewData["EnCamino"] ?? 0;
    var nuevos = (int?)ViewData["Nuevos"] ?? 0;
    var totalGanancia = (decimal?)ViewData["TotalGanancia"] ?? 0;
}

<!-- üé® BADGES DE ESTADO PERSONALIZADOS -->
<style>
    .estado-badge {
        display: inline-block;
        border-radius: .6rem;
        font-weight: 600;
        padding: .35em .75em;
        font-size: .9rem;
        line-height: 1;
        text-transform: capitalize;
        text-align: center;
        min-width: 90px;
    }

    /* Modo claro */
    .estado-completado {
        background-color: #28a745 !important;
        color: #fff !important;
    }

    .estado-camino {
        background-color: #ff9800 !important;
        color: #fff !important;
    }

    .estado-preparacion {
        background-color: #ffc107 !important;
        color: #212529 !important;
    }

    .estado-pendiente {
        background-color: #6c757d !important;
        color: #fff !important;
    }

    /* Modo oscuro */
    body.dark-mode .estado-completado {
        background-color: #2ecc71 !important;
        color: #fff !important;
    }

    body.dark-mode .estado-camino {
        background-color: #ffb74d !important;
        color: #212529 !important;
    }

    body.dark-mode .estado-preparacion {
        background-color: #ffe082 !important;
        color: #212529 !important;
    }

    body.dark-mode .estado-pendiente {
        background-color: #9e9e9e !important;
        color: #212529 !important;
    }

    table.table td .estado-badge {
        background-clip: padding-box !important;
    }
</style>

<div class="container-fluid px-4 mt-4">
    <!-- üîπ Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2 class="fw-bold text-dark">
            <i class="bi bi-receipt-cutoff me-2 text-warning"></i> Gesti√≥n de Pedidos
        </h2>
    </div>
    <p class="text-muted">Visualiz√°, control√° y gestion√° los pedidos activos y entregados.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- üîπ Tarjetas de m√©tricas -->
    <div class="row mb-4 g-3">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1 fw-semibold text-secondary">Pedidos Totales</p>
                        <h4 class="fw-bold">@totalPedidos</h4>
                    </div>
                    <i class="bi bi-list-check fs-3 text-warning"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1 fw-semibold text-secondary">Entregados</p>
                        <h4 class="fw-bold">@entregados</h4>
                    </div>
                    <i class="bi bi-check2-circle fs-3 text-success"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1 fw-semibold text-secondary">En Camino</p>
                        <h4 class="fw-bold">@enCamino</h4>
                    </div>
                    <i class="bi bi-truck fs-3 text-primary"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1 fw-semibold text-secondary">Ganancia Total</p>
                        <h4 class="fw-bold">@totalGanancia.ToString("C0")</h4>
                    </div>
                    <i class="bi bi-cash-coin fs-3 text-warning"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- üîπ Tabla de pedidos -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center p-5 text-muted">
                    <i class="bi bi-box fs-1 mb-3"></i>
                    <h5>No hay pedidos registrados a√∫n</h5>
                    <p>Los pedidos aparecer√°n aqu√≠ una vez que sean creados por los clientes.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Cliente</th>
                                <th>Fecha</th>
                                <th>Total</th>
                                <th>Estado</th>
                                <th>Cadete</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td>@p.Cliente?.Nombre</td>
                                    <td>@p.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@p.Total.ToString("C0")</td>

                                    <!-- Estado -->
                                    <td>
                                        @{
                                            var estado = p.Estado?.Trim().ToLower() ?? "";
                                            var claseEstado =
                                            estado.Contains("entregado") || estado.Contains("complet") ? "estado-completado" :
                                            estado.Contains("camino") ? "estado-camino" :
                                            estado.Contains("prepar") ? "estado-preparacion" :
                                            estado.Contains("pend") ? "estado-pendiente" :
                                            "estado-pendiente";
                                        }

                                        <span class="estado-badge @claseEstado">
                                            @p.Estado
                                        </span>
                                    </td>


                                    <td>@p.Cadete?.Nombre</td>

                                    <!-- Acciones -->
                                    <td>
                                        <a asp-action="Details" asp-route-id="@p.Id"
                                            class="btn btn-sm btn-outline-secondary me-1">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (p.Estado != "Entregado")
                                        {
                                            <a asp-action="EditarEstado" asp-route-id="@p.Id"
                                                class="btn btn-sm btn-outline-primary me-1">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        console.log("‚úÖ P√°gina Pedidos cargada correctamente");
    </script>
}