        console.log("üß© Navbar existe:", document.querySelector('.navbar') ? "‚úÖ S√≠" : "‚ùå No");

        window.addEventListener("load", () => {
            console.log("‚úÖ DOM completamente cargado");
            const navbar = document.querySelector('.navbar');
            if (!navbar) console.warn("‚ö†Ô∏è El layout no se est√° aplicando o el navbar no existe.");
        });
    </script>
}
    