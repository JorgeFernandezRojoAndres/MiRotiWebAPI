@model MiRoti.Models.Ingrediente

@{
    ViewData["Title"] = "Agregar Ingrediente";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">ðŸ§‚ Agregar Nuevo Ingrediente</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre del Ingrediente</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Harina, Tomate, etc." required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CostoUnitario" class="form-label">Costo Unitario</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="CostoUnitario" class="form-control" step="0.01" min="0.01" required />
                            </div>
                            <span asp-validation-for="CostoUnitario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UnidadMedidaId" class="form-label">Unidad de Medida</label>
                            <select asp-for="UnidadMedidaId" class="form-select" required>
                                <option value="">Seleccione una unidad</option>
                                @foreach (var unidad in ViewBag.UnidadesMedida as List<MiRoti.Models.UnidadMedida>)
                                {
                                    <option value="@unidad.Id">@unidad.Nombre (@unidad.Abreviatura)</option>
                                }
                            </select>
                            <span asp-validation-for="UnidadMedidaId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Agregar Ingrediente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>