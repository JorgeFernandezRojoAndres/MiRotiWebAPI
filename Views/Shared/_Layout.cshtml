@{
    var title = ViewData["Title"] ?? "Panel de Administraci贸n";
    var rol = Context.Session.GetString("UsuarioRol") ?? "Invitado";

}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - MiRoti</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #faf8f6;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background-color: #fff;
            border-bottom: 1px solid #eee;
        }

        .navbar-brand {
            font-weight: 600;
            color: #5c3d2e;
        }

        .nav-link.active {
            color: #f57c00 !important;
            border-bottom: 2px solid #f57c00;
        }

        .nav-link {
            color: #555;
            font-weight: 500;
            transition: color 0.2s;
        }

        .nav-link:hover {
            color: #f57c00;
        }

        footer {
            margin-top: 50px;
            padding: 15px 0;
            font-size: 0.9rem;
            color: #777;
            border-top: 1px solid #eee;
            text-align: center;
        }
    </style>
</head>

<body>
    <script>
        console.log(" Rol actual en sesi贸n:", "@rol");
    </script>

    <!--  Barra de navegaci贸n superior -->
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shop-window me-1"></i> Panel de Administraci贸n
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navbarNav" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">

                    @*  Si es ADMIN: ve todo *@
                    @if (rol == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Platos" ? "active" : "")"
                                asp-controller="Platos" asp-action="Index">
                                <i class="bi bi-egg-fried me-1"></i> Platos
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Pedidos" ? "active" : "")"
                                asp-controller="Pedidos" asp-action="Index">
                                <i class="bi bi-receipt-cutoff me-1"></i> Pedidos
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Analisis" ? "active" : "")"
                                asp-controller="Analisis" asp-action="Index">
                                <i class="bi bi-bar-chart-line-fill me-1"></i> An谩lisis
                            </a>
                        </li>
                    }


                    else if (rol.Equals("Cocinero", StringComparison.OrdinalIgnoreCase) || rol.Equals("Chef",
                    StringComparison.OrdinalIgnoreCase))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Platos" ? "active" : "")"
                                asp-controller="Platos" asp-action="Index">
                                <i class="bi bi-egg-fried me-1"></i> Platos
                            </a>
                        </li>
                    }


                    @*  Bot贸n de cerrar sesi贸n visible para ambos *@
                    @if (rol == "Admin" || rol == "Cocinero")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">
                                <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesi贸n
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - MiRoti | Panel de Administraci贸n
    </footer>

    @RenderSection("Scripts", required: false)
</body>

</html>